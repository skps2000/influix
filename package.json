{
  "name": "influix",
  "version": "0.1.0",
  "private": true,
  "description": "InfluiX - AI-native influence intelligence platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @influix/api",
    "dev:web": "npm run dev -w @influix/web",
    "deploy": "npm run build && wrangler deploy",
    // "dev:worker": "wrangler dev",
    "build": "npm run build:packages && npm run build:web",
    "build:web": "npm run build -w @influix/web",
    "build:packages": "npm run build -w @influix/types -w @influix/config -w @influix/ui -w @influix/ai",
    // "deploy": "npm run build",
    "clean": "rimraf apps/*/dist packages/*/dist",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit -p apps/web/tsconfig.json && tsc --noEmit -p apps/api/tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^9.2.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.2.0"
}
